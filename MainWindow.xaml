<Window x:Class="Production_Analysis.MainWindow"
        x:Name="MyDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Production_Analysis.Views"
        mc:Ignorable="d" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" 
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize" FontFamily="Global User Interface">

    <Border Style="{StaticResource mainBorder}" MouseDown="Border_MouseDown" x:Name="mainWindow">
        <views:MainView/>
    </Border>
</Window>